            "name": "can_send_nlq"
          },
          {
            "name": "can_admin_task"
          },
          {
            "name": "can_access_dataset"
          },
          {
            "name": "can_transfer_token"
          },
          {
            "name": "can_do_admin"
          },
          {
            "name": "can_send_request"
          },
          {
            "name": "can_admin_request"
